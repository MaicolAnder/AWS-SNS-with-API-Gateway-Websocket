{
    "compilerOptions": {
      "target": "ES2018",
      "module": "commonjs",
      "lib": ["ES2018"],
      "strict": true,
      "rootDir": "./src",
      "outDir": "./dist",
      "sourceMap": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowJs": true,
      "typeRoots": [
        "./node_modules/@types"
      ],
      "types": [
        "node",
        "jest"
      ]
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.test.ts"
    ]
  }